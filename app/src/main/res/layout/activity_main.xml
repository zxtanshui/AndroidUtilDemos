<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xinxiong.androidutilsdemo.MainActivity"
    android:orientation="vertical"
>

    <Button
        android:id="@+id/btn_morewindow"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/color_btn"
        android:text="moreWindow"
    />

    <Button
        android:layout_marginTop="5dp"
        android:id="@+id/btn_roundprogressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="roundprogressbar"
        android:background="@color/color_btn"
    />

</LinearLayout>
