<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="#EEFFFFFF" >

    <RelativeLayout
        android:id="@+id/rl_daiban"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_daiban"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/icon_index_daiban" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_daiban"
            android:layout_centerHorizontal="true"
            android:text="添加日程" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_index_kehu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_daiban"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_kehu"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/icon_index_kehu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_kehu"
            android:layout_centerHorizontal="true"
            android:text="添加客户" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_index_zhifu"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_index_kehu"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/iv_zhifu"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/icon_index_zhifu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_zhifu"
            android:layout_centerHorizontal="true"
            android:text="新建支付" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_index_xx" />

</RelativeLayout>